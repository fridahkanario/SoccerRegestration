<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PersonalInformation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_club_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="0dp"
            android:text="3. Medical Information"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.556"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="@android:dimen/app_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_club_info"
            app:srcCompat="@drawable/soccer"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/tv_section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.556"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView">

            <TextView
                android:id="@+id/tv_register_youth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:text="REGISTER AS A YOUTH PLAYER"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_club_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="Medical Information"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_section_header"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenges:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/challenges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="0dp"
                android:layout_toRightOf="@+id/tv_challenges" />

            <TextView
                android:id="@+id/tv_other_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_challenges"
                android:layout_marginTop="20dp"
                android:text="Other Conditions:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/other_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_challenges"
                android:layout_toRightOf="@+id/tv_other_conditions" />

            <TextView
                android:id="@+id/tv_physician_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_other_conditions"
                android:layout_marginTop="20dp"
                android:text="Physician Name:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/physician_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_other_conditions"
                android:layout_toRightOf="@+id/tv_physician_name" />

            <TextView
                android:id="@+id/tv_physician_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_physician_name"
                android:layout_marginTop="20dp"
                android:text="Physician Phone:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/physician_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_physician_name"
                android:layout_toRightOf="@+id/tv_physician_phone" />

            <TextView
                android:id="@+id/tv_insurance_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_physician_phone"
                android:layout_marginTop="20dp"
                android:text="Medical Insurance CO.:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/insurance_co"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_physician_phone"
                android:layout_toRightOf="@+id/tv_insurance_co" />

            <TextView
                android:id="@+id/tv_medical_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_insurance_co"
                android:layout_marginTop="20dp"
                android:text="Medical Phone.:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/medical_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_insurance_co"
                android:layout_toRightOf="@+id/tv_medical_phone" />

            <TextView
                android:id="@+id/tv_policy_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_medical_phone"
                android:layout_marginTop="20dp"
                android:text="Policy NO.:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/policy_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_medical_phone"
                android:layout_toRightOf="@+id/tv_policy_no" />

            <TextView
                android:id="@+id/tv_holder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_policy_no"
                android:layout_marginTop="20dp"
                android:text="Policy Holder:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_policy_no"
                android:layout_toRightOf="@+id/tv_holder_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_holder_name"
                android:layout_margin="16dp">

                <Button
                    android:id="@+id/btn_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Previous"/>

                <Button
                    android:id="@+id/btn_next2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorPrimary"
                    android:text="Next"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PersonalInformation">

    <TextView
            android:text="2. Personal Information"
            android:layout_width="wrap_content"
            android:paddingLeft="200dp"
            android:paddingTop="0dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="231dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/tv_club_info"
            tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/soccer"
            android:layout_height="279dp"
            android:paddingLeft="200dp"
            android:layout_marginBottom="24dp"
            android:paddingTop="@android:dimen/app_icon_size"
            android:layout_gravity="center_horizontal"
            tools:ignore="MissingConstraints"/>
    <RelativeLayout
            xmlns:android = "http://schemas.android.com/apk/res/android"
            xmlns:tools  = "http://schemas.android.com/tools"
            xmlns:app = "http://schemas.android.com/apk/res-auto"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            tools:showIn = "@layout/activity_main"
            android:paddingTop="300dp"
            tools:context = ".MainActivity">
        <TextView
                android:text="REGISTER AS A YOUTH PLAYER"
                android:layout_width="wrap_content"
                android:paddingLeft="70dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="231dp"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/tv_register_youth"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:text="Personal Information"
                android:layout_width="wrap_content"
                android:paddingLeft="180dp"
                android:textSize="15sp"
                android:paddingTop="25dp"

                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="231dp"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/tv_club_info2"
                tools:ignore="MissingConstraints"/>
    </RelativeLayout>


    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showIn="@layout/activity_main"
            android:paddingTop="350dp"
            tools:context=".MainActivity" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">
        <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="Date of birth:"
                android:textStyle="bold"
                android:textSize="15dp"
                tools:ignore="MissingConstraints"/>
        <EditText
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_birthday"
                android:layout_toRightOf="@+id/tv_birthday" tools:ignore="MissingConstraints"/>



            <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="75dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_male"
                    android:checked="true"/>

            <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/radioMale"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_female"/>

        <TextView
                android:id="@+id/tv_place_residence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:text="Where do you Live:"
                android:textStyle="bold"
                android:textSize="15dp"
                tools:ignore="MissingConstraints"/>
        <EditText
                android:id="@+id/club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_place_residence"
                android:layout_toRightOf="@+id/tv_place_residence" tools:ignore="MissingConstraints"/>
        <TextView
                android:id="@+id/tv_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:text="Postal Code:"
                android:textStyle="bold"
                android:textSize="15dp"
                tools:ignore="MissingConstraints"/>
        <EditText
                android:id="@+id/postalcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_postcode"
                android:layout_toRightOf="@+id/tv_postcode" tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/tv_parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="200dp"
                android:text="What is your/Parent Name:"
                android:textStyle="bold"
                android:textSize="15dp"
                tools:ignore="MissingConstraints"/>
        <EditText
                android:id="@+id/parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_parent_name"
                android:layout_toRightOf="@+id/tv_parent_name" tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/tv_parent_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="250dp"
                android:text="What is your/Parent Phone:"
                android:textStyle="bold"
                android:textSize="15dp"
                tools:ignore="MissingConstraints"/>
        <EditText
                android:id="@+id/parent_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_parent_phone"
                android:layout_toRightOf="@+id/tv_parent_phone" tools:ignore="MissingConstraints"/>


        <Button
                android:id="@+id/btn_next2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="360dp"
                android:background="@color/colorPrimary"
                android:text="Next"/>
        <Button
                android:id="@+id/btn_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="100dp"
                android:background="@color/colorPrimary"
                android:text="Previous"/>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
